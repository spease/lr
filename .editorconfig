;http://www.editorconfig.org

root=true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.c]
indent_style = space
indent_size = 2

[*.h]
indent_style = space
indent_size = 2

[*.mk]
indent_style = tab
indent_size = 2

[*.tex]
indent_style = tab
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 2

